<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/bg_cekongkir">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp">

        <EditText
                android:id="@+id/editOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kota Asal"
                android:focusable="false"
                android:cursorVisible="false"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"/>

        <EditText
                android:id="@+id/editDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kota Tujuan"
                android:focusable="false"
                android:cursorVisible="false"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"/>
        <Button
                android:text="Cek Ongkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/btnCekOngkir"
                android:textColor="@color/colorWhite"/>

        <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBarCekOngkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

        <ListView
                android:id="@+id/listCekOngkir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>